{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["dom", "es2017", "ES2018"],
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "strictNullChecks": false
  },
  "exclude": ["node_modules", "./src/datasource.ts", "./src/migrations/*.ts"]
}
