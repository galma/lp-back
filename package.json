{
  "name": "nest-serverless-demo",
  "version": "1.0.0",
  "description": "Nest TypeScript demo with Serverless framework",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "ts-node src/main",
    "prestart:prod": "npm run build",
    "start:prod": "node dist/main.js",
    "typeorm": "ts-node --project ./tsconfig.json -r tsconfig-paths/register ./tools/typeorm.custom-cli.ts"
  },
  "dependencies": {
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "9.4.2",
    "@nestjs/config": "^2.3.2",
    "@nestjs/core": "9.4.2",
    "@nestjs/platform-express": "9.4.2",
    "@nestjs/typeorm": "^9.0.1",
    "aws-serverless-express": "^3.3.5",
    "axios": "^1.4.0",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "pg": "^8.5.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "^2.6.2",
    "rxjs": "7.8.1",
    "typeorm": "^0.3.16",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.15",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "7.10.6",
    "@types/supertest": "^2.0.5",
    "jest": "^29.1.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-optimize": "^4.0.2-rc.1",
    "serverless-plugin-typescript": "^2.1.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
